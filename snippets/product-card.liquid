<div class="w-full py-6 px-3">
                        <div class="border bg-white shadwo-lg rounded-lg overflow-hidden">
                            <a href="{{ product.url }}">
                                {% if product.featured_image %}
                                    <div class="h-80 overflow-hidden">
                                        <img class="w-full h-full object-cover" src="{{ product.featured_image |  img_url: 'medium' }}" alt="product.featured_image.alt">
                                    </div>
                                    {% else %}
                                        {{ 'product-1' |  placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                                {% endif %}
                            </a>
                            <div class="flex flex-col p-4">
                                <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                                <a class="text-gray-700 uppercase" href="{{ product.url }}">{{ product.title }}</a>
                                </a>
                                <p class="text-gray-600">{{ product.price |  money }}</p>
                            </div>        
                        </div>
                    </div>