<div class="w-full py-6 px-3">
    <div class="border bg-white shadwo-lg rounded-lg overflow-hidden">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover" src="{{ product_product.featured_image |  img_url: 'medium' }}" alt="product_product.featured_image.alt">
                </div>
                {% else %}
                    {{ 'product-1' |  placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        <div class="flex flex-col p-4">
            {% if section.settings.vendor_name %}
                <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
            {% endif %}

            <a class="text-gray-700 uppercase" href="{{ product_product.url }}">{{ product_product.title }}</a>
            </a>
            <p class="text-gray-600">{{ product_product.price |  money }}</p>
        </div>        
    </div>
</div>