<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        {% for product in section.settings.featured_collection.products limit: section.settings.no_of_product_show %}
            {% render 'product-card', product_product: product %}
            {% else %}
                {% for item in (1..4) %}
                    {% render 'product-card-placeholder' %}
                {% endfor %}
        {% endfor %}
    </div>
</div>
{% schema %}
    {
        "name": "Featured Collection",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "Featured Collection",
                "label": "Title"
            },
            {
                "type": "collection",
                "id": "featured_collection",
                "label": "Collection"
            },
            {
                "type": "range",
                "id": "no_of_product_show",
                "min": 4,
                "max": 12,
                "default": 4,
                "label": "Number of Product Display"
            }
        ],
        "presets": [
            {
                "name": "Featured Products"
            }
        ]
    }
{% endschema %}